# Kubernetes Secret for Frigate Notify
# IMPORTANT: This is a template file. DO NOT commit actual secrets to git!
#
# To use:
# 1. Copy this file to secret.yaml (which should be in .gitignore)
# 2. Replace the base64-encoded values with your actual secrets
# 3. Apply with: kubectl apply -f k8s/secret.yaml
#
# To encode a value in base64:
#   echo -n 'your-value-here' | base64
#
# To decode a value:
#   echo 'base64-value' | base64 -d

apiVersion: v1
kind: Secret
metadata:
  name: frigate-notify-secrets
  labels:
    app: frigate-notify
type: Opaque
data:
  # Pushover API credentials
  # Example: echo -n 'abc123xyz' | base64
  pushover-api-key: eW91ci1wdXNob3Zlci1hcGkta2V5LWhlcmU=  # your-pushover-api-key-here
  pushover-user-key: eW91ci1wdXNob3Zlci11c2VyLWtleS1oZXJl  # your-pushover-user-key-here

  # MQTT credentials
  mqtt-username: eW91ci1tcXR0LXVzZXJuYW1l  # your-mqtt-username
  mqtt-password: eW91ci1tcXR0LXBhc3N3b3Jk  # your-mqtt-password

  # Healthchecks.io UUID (optional)
  healthchecks-uuid: eW91ci1oZWFsdGhjaGVja3MtdXVpZC1oZXJl  # your-healthchecks-uuid-here

  # Frigate server URL
  frigate-server-host: aHR0cHM6Ly9mcmlnYXRlLnR4c3d3LmNvbQ==  # https://frigate.txsww.com

# Alternative: Use stringData for plain text (Kubernetes will encode automatically)
# stringData:
#   pushover-api-key: "your-pushover-api-key-here"
#   pushover-user-key: "your-pushover-user-key-here"
#   mqtt-username: "your-mqtt-username"
#   mqtt-password: "your-mqtt-password"
#   healthchecks-uuid: "your-healthchecks-uuid"
#   frigate-server-host: "https://frigate.txsww.com"
